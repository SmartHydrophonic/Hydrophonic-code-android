<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHydroponic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/green_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorSecondaryVariant">@color/green_primary</item>
        <item name="colorOnSecondary">@color/green_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartHydroponic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartHydroponic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartHydroponic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fontPoppins">
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>